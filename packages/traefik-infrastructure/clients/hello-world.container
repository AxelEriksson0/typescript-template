[Container]
ContainerName=hello-world
Image=docker.io/crccheck/hello-world:latest
Label=traefik.enable=true traefik.http.routers.hello-world-http.entrypoints=web traefik.http.routers.hello-world-http.rule=Host(`localhost`) traefik.http.services.hello-world-http.loadbalancer.server.port=8000 traefik.http.routers.hello-world-https.entrypoints=websecure traefik.http.routers.hello-world-https.rule=Host(`localhost`) traefik.http.routers.hello-world-https.tls=true traefik.http.routers.hello-world-https.tls.certresolver=letsencrypt
Network=traefik-network

[Service]
Restart=always
