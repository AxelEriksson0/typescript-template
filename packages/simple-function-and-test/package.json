{
  "name": "simple-function-and-test",
  "description": "This includes a simple function and a test. Use as a template for creating new packages.",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "node --loader ts-node/esm ./index.ts",
    "start": "node dist/index.js",
    "ut": "node --experimental-test-coverage --import tsx --test **/*.test.ts",
    "watch": "tsc -w"
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "ts-node": "^10.9.2",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  }
}
