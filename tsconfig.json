{
  "compilerOptions": {
    /*
     * TODO - Move into packages/web.
     * See docs/TSCONFIG.md for more information.
     */
    "allowJs": true,
    "allowUnreachableCode": true,
    "composite": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "preserve",
    "jsxImportSource": "solid-js",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "dist",
    "strict": true,
    /*
     * export enum Suit { Diamonds = "Diamonds", Clovers = "Cloves", Hearts = "Hearts", Spades = "Spades" }
     * Object.keys(Suit).forEach((suit: Suit)) would not work when strictFunctionTypes: true
     */
    "strictFunctionTypes": false,
    "target": "ESNext"
  }
}
